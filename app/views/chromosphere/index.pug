extends layout
block content
  #mycarousel.carousel.slide(data-ride='carousel')
      //-
        Indicators
        <ol class="carousel-indicators">
        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
        <li data-target="#mycarousel" data-slide-to="1"></li>
        <li data-target="#mycarousel" data-slide-to="2"></li>
        <li data-target="#mycarousel" data-slide-to="3"></li>
        <li data-target="#mycarousel" data-slide-to="4"></li>
        <li data-target="#mycarousel" data-slide-to="5"></li>
        <li data-target="#mycarousel" data-slide-to="6"></li>
        <li data-target="#mycarousel" data-slide-to="7"></li>
        <li data-target="#mycarousel" data-slide-to="8"></li>
        <li data-target="#mycarousel" data-slide-to="9"></li>
        <li data-target="#mycarousel" data-slide-to="10"></li>
        </ol>
      // Wrapper for slides
      .carousel-inner
        .carousel-item.active
          a(href="https://chromosphere.eu/editions/2025-athens/")
            img.img-fluid(src='https://chromosphere.eu/files/2025/02/2025-athens-MAIN.jpg', alt='Chromosphere 2025 Athens')
        .carousel-item
          a(href="https://chromosphere.eu/editions/2024-rome/")
            img.img-fluid(src='https://chromosphere.eu/files/2024/11/2024-Rome-MAIN.jpg', alt='Chromosphere 2024 Rome')
        .carousel-item
          a(href="https://chromosphere.eu/editions/2024-lyon/")
            img.img-fluid(src='https://chromosphere.eu/files/2024/11/2024-Lyon-MAIN.jpg', alt='Chromosphere 2024 Lyon')
        .carousel-item
          a(href="https://chromosphere.eu/editions/2024-krakow/")
            img.img-fluid(src='https://chromosphere.eu/files/2024/09/2024-Krakow-MAIN.jpg', alt='Chromosphere 2024 Krakow')
        .carousel-item
          img.img-fluid(src='https://chromosphere.eu/files/2024/02/cromosphere-main.jpg', alt='Chromosphere 2024-2025')
        .carousel-item
          img.img-fluid(src='https://chromosphere.eu/files/2020/05/07_chromosphere.jpg', alt='Chromosphere 2024-2025')
        //-.carousel-item
          img.img-fluid(src='/chromosphere/images/carusel_img_2016/chromosphere_slide-02.jpg', alt='Chromosphere 2024-2025')
          .carousel-item
            img.img-fluid(src='/chromosphere/images/carusel_img_2016/chromosphere_slide-03.jpg', alt='Chromosphere 2024-2025')
          .carousel-item
            img.img-fluid(src='/chromosphere/images/carusel_img_2016/chromosphere_slide-04.jpg', alt='Chromosphere 2024-2025')
          .carousel-item
            img.img-fluid(src='/chromosphere/images/carusel_img_2016/chromosphere_slide-05.jpg', alt='Chromosphere 2024-2025')
          .carousel-item
            img.img-fluid(src='/chromosphere/images/carusel_img_2016/chromosphere_slide-06.jpg', alt='Chromosphere 2024-2025')
      //- Controls
        a.carousel-control-prev(href='#mycarousel', role='button', data-slide='prev', title=global.__("Previous slide"))
          span.carousel-control-prev-icon(aria-hidden='true')
          span.sr-only Previous
        a.carousel-control-next(href='#mycarousel', role='button', data-slide='next', title=global.__("Nexts slide"))
          span.carousel-control-next-icon(aria-hidden='true')
          span.sr-only Next
        
  section.home.mt-3(itemscope, itemtype='http://schema.org/ItemList')
    .container-fluid
      h1.entry-title(itemprop="name") News
    .swiper-container
      !=results.news.replace(new RegExp("col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12 isotopeitem", 'g'), "swiper-slide").replace(new RegExp("row isotope results", 'g'), "swiper-wrapper").replace(new RegExp("pagination pagination-sm justify-content-center", 'g'), "pagination pagination-sm justify-content-center d-none")
    .container-fluid
      .text-right.boxItem
        a.btn.btn-primary.btn-sm(href="/news/", title="See all News") See all News
    //-section.home(itemscope, itemtype='http://schema.org/ItemList')
      .container-fluid
        h1.entry-title(itemprop="name") Satellite Events
      .swiper-container
        !=results.events.replace(new RegExp("col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12 isotopeitem", 'g'), "swiper-slide").replace(new RegExp("row isotope results", 'g'), "swiper-wrapper").replace(new RegExp("pagination pagination-sm justify-content-center", 'g'), "pagination pagination-sm justify-content-center d-none")
      .container-fluid
        .text-right.boxItem
          a.btn.btn-primary.btn-sm(href="/partnerships/", title="See all Events") See all Events

      section.home(itemscope, itemtype='http://schema.org/ItemList')
        .container-fluid
          h1.entry-title(itemprop="name") Productions
        .swiper-container
          !=results.editions.replace(new RegExp("col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12 isotopeitem", 'g'), "swiper-slide").replace(new RegExp("row isotope results", 'g'), "swiper-wrapper").replace(new RegExp("pagination pagination-sm justify-content-center", 'g'), "pagination pagination-sm justify-content-center d-none")
        .container-fluid
          .text-right.boxItem
            a.btn.btn-primary.btn-sm(href="/events/", title="See all Editions") See all Productions
